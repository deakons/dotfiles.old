# Display current git branch in PS1 prompt
if [ -f /usr/bin/git ] 
then
	function parse_git_branch {
	    local dir=. head
	    until [ "$dir" -ef / ]; do
	        if [ -f "$dir/.git/HEAD" ]; then
	            head=$(< "$dir/.git/HEAD")
	            if [[ $head == ref:\ refs/heads/* ]]; then
	                git_branch="${head#*/*/}"
	            elif [[ $head != '' ]]; then
	                git_branch='detached'
	            else
	                git_branch='unknown'
	            fi
	            return
	        fi
	        dir="../$dir"
	    done
	    git_branch=''
	}
else 
	function parse_git_branch {
	return
	}
fi
